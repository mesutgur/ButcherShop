@model ButcherShop.Entity.Entities.Product
@{
    ViewBag.Title = Model.Name;
    var relatedRecipes = ViewBag.RelatedRecipes as List<ButcherShop.Entity.Entities.Recipe>;
    var relatedProducts = ViewBag.RelatedProducts as List<ButcherShop.Entity.Entities.Product>;
}

@section styles {
    <style>
        .breadcrumb-custom {
            background: var(--light-color);
            padding: 1rem 0;
            margin-bottom: 2rem;
        }

        .product-detail-section {
            padding: 2rem 0;
        }

        .product-gallery {
            position: sticky;
            top: 100px;
        }

        .main-image {
            border-radius: 15px;
            overflow: hidden;
            box-shadow: 0 5px 20px rgba(0,0,0,0.1);
            margin-bottom: 1rem;
        }

        .main-image img {
            width: 100%;
            height: 500px;
            object-fit: cover;
            transition: transform 0.3s;
        }

        .main-image img:hover {
            transform: scale(1.05);
        }

        .thumbnail-gallery {
            display: flex;
            gap: 10px;
            flex-wrap: wrap;
        }

        .thumbnail-item {
            width: 80px;
            height: 80px;
            border-radius: 8px;
            overflow: hidden;
            cursor: pointer;
            border: 2px solid transparent;
            transition: all 0.3s;
        }

        .thumbnail-item:hover {
            border-color: var(--primary-color);
        }

        .thumbnail-item.active {
            border-color: var(--primary-color);
            box-shadow: 0 0 10px rgba(220, 53, 69, 0.3);
        }

        .thumbnail-item img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

        .product-info {
            background: white;
            padding: 2rem;
            border-radius: 15px;
            box-shadow: 0 5px 20px rgba(0,0,0,0.05);
        }

        .product-title {
            font-size: 2.5rem;
            font-weight: 700;
            color: var(--dark-color);
            margin-bottom: 1rem;
        }

        .product-price {
            font-size: 3rem;
            font-weight: 700;
            color: var(--primary-color);
            margin: 1.5rem 0;
        }

        .product-meta {
            display: flex;
            gap: 2rem;
            margin: 1.5rem 0;
            padding: 1.5rem;
            background: var(--light-color);
            border-radius: 10px;
        }

        .meta-item {
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

        .meta-item i {
            font-size: 1.5rem;
            color: var(--primary-color);
        }

        .product-description {
            margin: 2rem 0;
            line-height: 1.8;
            color: #555;
        }

        .stock-status {
            display: inline-block;
            padding: 0.75rem 1.5rem;
            border-radius: 50px;
            font-weight: 600;
            margin: 1rem 0;
        }

        .stock-status.in-stock {
            background: rgba(40, 167, 69, 0.1);
            color: #28a745;
        }

        .stock-status.out-of-stock {
            background: rgba(220, 53, 69, 0.1);
            color: #dc3545;
        }

        .recipe-card-small {
            border: none;
            border-radius: 10px;
            overflow: hidden;
            transition: all 0.3s;
            box-shadow: 0 3px 10px rgba(0,0,0,0.08);
        }

        .recipe-card-small:hover {
            transform: translateY(-3px);
            box-shadow: 0 5px 15px rgba(0,0,0,0.15);
        }

        .recipe-card-small img {
            height: 150px;
            object-fit: cover;
        }

        .related-product-card {
            border: none;
            border-radius: 10px;
            overflow: hidden;
            transition: all 0.3s;
            box-shadow: 0 3px 10px rgba(0,0,0,0.08);
        }

        .related-product-card:hover {
            transform: translateY(-3px);
            box-shadow: 0 5px 15px rgba(0,0,0,0.15);
        }

        .related-product-card img {
            height: 180px;
            object-fit: cover;
        }

        .info-box {
            background: var(--light-color);
            padding: 1.5rem;
            border-radius: 10px;
            border-left: 4px solid var(--primary-color);
            margin: 2rem 0;
        }

        @@media (max-width: 768px) {
            .product-title {
                font-size: 1.8rem;
            }

            .product-price {
                font-size: 2rem;
            }

            .main-image img {
                height: 300px;
            }
        }
    </style>
}

<!-- Breadcrumb -->
<div class="breadcrumb-custom">
    <div class="container">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb mb-0">
                <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Anasayfa</a></li>
                <li class="breadcrumb-item"><a href="@Url.Action("Index", "Product")">Ürünler</a></li>
                @if (Model.Category != null)
                {
                    <li class="breadcrumb-item">
                        <a href="@Url.Action("Index", "Product", new { categoryId = Model.CategoryId })">@Model.Category.Name</a>
                    </li>
                }
                <li class="breadcrumb-item active">@Model.Name</li>
            </ol>
        </nav>
    </div>
</div>

<div class="container product-detail-section">
    <div class="row">
        <!-- Product Gallery -->
        <div class="col-lg-5">
            <div class="product-gallery">
                <div class="main-image">
                    @{
                        var productImages = Model.ProductImages?.Where(pi => pi.IsActive && !pi.IsDeleted).OrderBy(pi => pi.DisplayOrder).ToList();
                        var mainImage = productImages?.FirstOrDefault(pi => pi.IsMainImage) ?? productImages?.FirstOrDefault();
                        var displayImageUrl = mainImage?.ImageUrl ?? Model.ImageUrl ?? "https://via.placeholder.com/600x500?text=" + Model.Name;
                    }
                    <img id="mainImage" src="@displayImageUrl" alt="@Model.Name">
                </div>

                @if (productImages != null && productImages.Count > 1)
                {
                    <div class="thumbnail-gallery">
                        @foreach (var image in productImages)
                        {
                            <div class="thumbnail-item @(image.IsMainImage ? "active" : "")" data-image="@image.ImageUrl">
                                <img src="@image.ImageUrl" alt="@Model.Name">
                            </div>
                        }
                    </div>
                }
            </div>
        </div>

        <!-- Product Info -->
        <div class="col-lg-7">
            <div class="product-info">
                @if (Model.Category != null)
                {
                    <span class="badge bg-info mb-2">@Model.Category.Name</span>
                }
                
                @if (Model.IsFeatured)
                {
                    <span class="badge bg-warning text-dark mb-2 ms-2">
                        <i class="fas fa-star me-1"></i> Öne Çıkan
                    </span>
                }

                <h1 class="product-title">@Model.Name</h1>

                <!-- Stock Status -->
                @if (Model.StockQuantity > 0)
                {
                    <div class="stock-status in-stock">
                        <i class="fas fa-check-circle me-2"></i> Stokta Var (@Model.StockQuantity @Model.Unit)
                    </div>
                }
                else
                {
                    <div class="stock-status out-of-stock">
                        <i class="fas fa-times-circle me-2"></i> Stokta Yok
                    </div>
                }

                <!-- Price -->
                <div class="product-price">
                    @Model.Price.ToString("C2")
                    <small class="text-muted" style="font-size: 1.5rem;">/ @Model.Unit</small>
                </div>

                <!-- Product Meta -->
                <div class="product-meta">
                    <div class="meta-item">
                        <i class="fas fa-box"></i>
                        <div>
                            <small class="text-muted d-block">Birim</small>
                            <strong>@Model.Unit</strong>
                        </div>
                    </div>
                    <div class="meta-item">
                        <i class="fas fa-layer-group"></i>
                        <div>
                            <small class="text-muted d-block">Kategori</small>
                            <strong>@(Model.Category != null ? Model.Category.Name : "Belirtilmemiş")</strong>
                        </div>
                    </div>
                    <div class="meta-item">
                        <i class="fas fa-calendar"></i>
                        <div>
                            <small class="text-muted d-block">Eklenme</small>
                            <strong>@Model.CreatedDate.ToString("dd.MM.yyyy")</strong>
                        </div>
                    </div>
                </div>

                <!-- Description -->
                @if (!string.IsNullOrEmpty(Model.Description))
                {
                    <div class="product-description">
                        <h5><i class="fas fa-info-circle me-2"></i> Ürün Açıklaması</h5>
                        <p>@Model.Description</p>
                    </div>
                }

                <!-- Info Box -->
                <div class="info-box">
                    <h6 class="mb-3"><i class="fas fa-shield-alt me-2"></i> Ürün Bilgileri</h6>
                    <ul class="list-unstyled mb-0">
                        <li class="mb-2"><i class="fas fa-check text-success me-2"></i> %100 Taze ve Kaliteli</li>
                        <li class="mb-2"><i class="fas fa-check text-success me-2"></i> Hijyenik Koşullarda Hazırlanır</li>
                        <li class="mb-2"><i class="fas fa-check text-success me-2"></i> Aynı Gün Teslimat</li>
                        <li class="mb-0"><i class="fas fa-check text-success me-2"></i> Kalite Garantisi</li>
                    </ul>
                </div>

                <!-- Actions -->
                <div class="d-grid gap-2 d-md-flex">
                    <a href="@Url.Action("Contact", "Home")" class="btn btn-danger btn-lg flex-fill">
                        <i class="fas fa-phone me-2"></i> Sipariş Ver
                    </a>
                    <a href="@Url.Action("Index")" class="btn btn-outline-secondary btn-lg flex-fill">
                        <i class="fas fa-arrow-left me-2"></i> Ürünlere Dön
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Related Recipes -->
    @if (relatedRecipes != null && relatedRecipes.Any())
    {
        <div class="row mt-5">
            <div class="col-12">
                <div class="section-title text-start">
                    <h2><i class="fas fa-book me-2"></i> Bu Ürünü Kullanan Tarifler</h2>
                    <p>@Model.Name ürünü ile yapabileceğiniz lezzetli tarifler</p>
                </div>
            </div>

            @foreach (var recipe in relatedRecipes.Take(3))
            {
                <div class="col-lg-4 col-md-6 mb-4">
                    <div class="card recipe-card-small">
                        <img src="@(!string.IsNullOrEmpty(recipe.ImageUrl) ? recipe.ImageUrl : "https://via.placeholder.com/400x200?text=" + recipe.Title)" 
                             class="card-img-top" alt="@recipe.Title">
                        <div class="card-body">
                            <h5 class="card-title">@recipe.Title</h5>
                            <div class="d-flex justify-content-between align-items-center mb-3">
                                <small class="text-muted">
                                    <i class="far fa-clock me-1"></i> @(recipe.PreparationTime + recipe.CookingTime) dk
                                </small>
                                <span class="badge bg-@(recipe.DifficultyLevel == "Kolay" ? "success" : recipe.DifficultyLevel == "Orta" ? "warning" : "danger")">
                                    @recipe.DifficultyLevel
                                </span>
                            </div>
                            <a href="@Url.Action("Details", "Recipe", new { id = recipe.Id })" class="btn btn-outline-danger w-100">
                                <i class="fas fa-arrow-right me-1"></i> Tarifi Gör
                            </a>
                        </div>
                    </div>
                </div>
            }

            @if (relatedRecipes.Count > 3)
            {
                <div class="col-12 text-center mt-3">
                    <a href="@Url.Action("Index", "Recipe")" class="btn btn-primary-custom">
                        <i class="fas fa-book me-2"></i> Tüm Tarifleri Gör
                    </a>
                </div>
            }
        </div>
    }

    <!-- Related Products -->
    @if (relatedProducts != null && relatedProducts.Any())
    {
        <div class="row mt-5">
            <div class="col-12">
                <div class="section-title text-start">
                    <h2><i class="fas fa-shopping-basket me-2"></i> Benzer Ürünler</h2>
                    <p>Aynı kategoriden diğer ürünlerimiz</p>
                </div>
            </div>

            @foreach (var product in relatedProducts)
            {
                <div class="col-lg-3 col-md-6 mb-4">
                    <div class="card related-product-card">
                        @{
                            var relatedMainImg = product.ProductImages?.FirstOrDefault(pi => pi.IsMainImage && pi.IsActive && !pi.IsDeleted);
                            var relatedImgUrl = relatedMainImg?.ImageUrl ?? product.ImageUrl ?? "https://via.placeholder.com/300x200?text=" + product.Name;
                        }
                        <img src="@relatedImgUrl" class="card-img-top" alt="@product.Name">
                        <div class="card-body">
                            <h6 class="card-title">@product.Name</h6>
                            <div class="d-flex justify-content-between align-items-center">
                                <span class="text-danger fw-bold">@product.Price.ToString("C2")</span>
                                <a href="@Url.Action("Details", new { id = product.Id })" class="btn btn-sm btn-outline-danger">
                                    Detay
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

@section scripts {
    <script>
        $(document).ready(function () {
            // Thumbnail click event
            $('.thumbnail-item').on('click', function () {
                var imageUrl = $(this).data('image');
                $('#mainImage').attr('src', imageUrl);
                
                $('.thumbnail-item').removeClass('active');
                $(this).addClass('active');
            });

            // Image zoom effect (optional)
            $('#mainImage').on('click', function () {
                $(this).toggleClass('zoomed');
            });
        });
    </script>
}