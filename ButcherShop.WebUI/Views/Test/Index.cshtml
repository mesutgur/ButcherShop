@{
    ViewBag.Title = "Dependency Injection Test";
}

<div class="container" style="margin-top: 50px;">
    <div class="row">
        <div class="col-md-12">
            <h2>Dependency Injection Test Sayfası</h2>
            <hr />

            <div class="alert alert-success">
                <h4>✅ Dependency Injection Çalışıyor!</h4>
                <p>Service'ler başarıyla inject edildi.</p>
            </div>

            <div class="panel panel-primary">
                <div class="panel-heading">
                    <h3 class="panel-title">Veritabanı İstatistikleri</h3>
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="well">
                                <h4>Kategoriler</h4>
                                <p class="lead">Toplam: <strong>@ViewBag.CategoryCount</strong></p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="well">
                                <h4>Ürünler</h4>
                                <p class="lead">Toplam: <strong>@ViewBag.ProductCount</strong></p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <a href="@Url.Action("Categories", "Test")" class="btn btn-info btn-lg btn-block" target="_blank">
                        <i class="glyphicon glyphicon-list"></i> Kategorileri JSON Olarak Gör
                    </a>
                </div>
                <div class="col-md-6">
                    <a href="@Url.Action("Products", "Test")" class="btn btn-success btn-lg btn-block" target="_blank">
                        <i class="glyphicon glyphicon-shopping-cart"></i> Ürünleri JSON Olarak Gör
                    </a>
                </div>
            </div>

            <hr />

            <div class="alert alert-info">
                <strong>Sonraki Adım:</strong> Admin panel sayfalarını oluşturacağız.
            </div>
        </div>
    </div>
</div>

