@model List<ButcherShop.Entity.Entities.Product>
@{
    ViewBag.Title = "Ürün Yönetimi";
}

@section Breadcrumb {
    <li class="breadcrumb-item"><a href="@Url.Action("Index", "Dashboard")">Dashboard</a></li>
    <li class="breadcrumb-item active">Ürünler</li>
}

<!--
    * DataTables: Arama, sıralama, sayfalama
    * AJAX Toggle: Aktif/Pasif ve Öne Çıkan durumu
    * Stok Güncelleme Modal: Popup ile stok güncelleme
    * Renkli Badge'ler: Stok durumuna göre (yeşil >10, sarı >0, kırmızı 0)
-->

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show">
        <button type="button" class="close" data-dismiss="alert">&times;</button>
        <i class="fas fa-check-circle"></i> @TempData["SuccessMessage"]
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show">
        <button type="button" class="close" data-dismiss="alert">&times;</button>
        <i class="fas fa-exclamation-circle"></i> @TempData["ErrorMessage"]
    </div>
}

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Ürün Listesi</h3>
                <div class="card-tools">
                    <a href="@Url.Action("Create")" class="btn btn-success btn-sm">
                        <i class="fas fa-plus"></i> Yeni Ürün Ekle
                    </a>
                </div>
            </div>
            <div class="card-body">
                <table class="table table-bordered table-hover" id="productTable">
                    <thead>
                        <tr>
                            <th style="width: 80px;">Görsel</th>
                            <th>Ürün Adı</th>
                            <th>Kategori</th>
                            <th style="width: 100px;">Fiyat</th>
                            <th style="width: 100px;">Stok</th>
                            <th style="width: 80px;">Öne Çıkan</th>
                            <th style="width: 80px;">Durum</th>
                            <th style="width: 180px;">İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            foreach (var product in Model)
                            {
                                <tr>
                                    @*<td class="text-center">
                                            @{
                                                var mainImage = product.ProductImages?.FirstOrDefault(pi => pi.IsMainImage && pi.IsActive && !pi.IsDeleted);
                                                var imageUrl = mainImage?.ImageUrl ?? product.ImageUrl;
                                            }
                                            @if (!string.IsNullOrEmpty(imageUrl))
                                            {
                                                <img src="@imageUrl" alt="@product.Name" class="img-thumbnail" style="max-width: 60px; max-height: 60px;" />
                                            }
                                            else
                                            {
                                                <span class="badge badge-secondary">Yok</span>
                                            }
                                        </td>*@
                                    <td class="text-center">
                                        @{
                                            var mainImageList = product.ProductImages?.FirstOrDefault(pi => pi.IsMainImage && pi.IsActive && !pi.IsDeleted);
                                            var imageUrlList = mainImageList?.ImageUrl ?? product.ImageUrl;
                                        }
                                        @if (!string.IsNullOrEmpty(imageUrlList))
                                        {
                                            <div class="position-relative d-inline-block">
                                                <img src="@imageUrlList" alt="@product.Name" class="img-thumbnail" style="max-width: 60px; max-height: 60px; object-fit: cover;" />
                                                @if (mainImageList != null)
                                                {
                                                    <span class="badge badge-warning position-absolute" style="top: 2px; right: 2px; font-size: 8px;">
                                                        <i class="fas fa-star"></i>
                                                    </span>
                                                }
                                            </div>
                                        }
                                        else
                                        {
                                            <span class="badge badge-secondary">Yok</span>
                                        }
                                    </td>
                                    <td>
                                        <strong>@product.Name</strong><br />
                                        <small class="text-muted">ID: @product.Id</small>
                                    </td>
                                    <td>
                                        @if (product.Category != null)
                                        {
                                            <span class="badge badge-info">@product.Category.Name</span>
                                        }
                                    </td>
                                    <td class="text-right">
                                        <strong>@product.Price.ToString("C2")</strong><br />
                                        <small class="text-muted">@product.Unit</small>
                                    </td>
                                    <td class="text-center">
                                        @if (product.StockQuantity > 10)
                                        {
                                            <span class="badge badge-success">@product.StockQuantity</span>
                                        }
                                        else if (product.StockQuantity > 0)
                                        {
                                            <span class="badge badge-warning">@product.StockQuantity</span>
                                        }
                                        else
                                        {
                                            <span class="badge badge-danger">0</span>
                                        }
                                        <br />
                                        <small>
                                            <a href="#" class="update-stock" data-id="@product.Id" data-current="@product.StockQuantity">
                                                Güncelle
                                            </a>
                                        </small>
                                    </td>
                                    <td class="text-center">
                                        <button type="button" class="btn btn-sm toggle-featured @(product.IsFeatured ? "btn-warning" : "btn-outline-secondary")"
                                                data-id="@product.Id"
                                                title="@(product.IsFeatured ? "Öne Çıkan" : "Normal")">
                                            <i class="fas fa-star"></i>
                                        </button>
                                    </td>
                                    <td class="text-center">
                                        <button type="button" class="btn btn-sm toggle-status @(product.IsActive ? "btn-success" : "btn-secondary")"
                                                data-id="@product.Id">
                                            @if (product.IsActive)
                                            {
                                                <i class="fas fa-check"></i>
                                            }
                                            else
                                            {
                                                <i class="fas fa-times"></i>
                                            }
                                        </button>
                                    </td>
                                    <td class="text-center">
                                        <div class="btn-group">
                                            <a href="@Url.Action("Details", new { id = product.Id })" class="btn btn-primary btn-sm" title="Detay">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            <a href="@Url.Action("Edit", new { id = product.Id })" class="btn btn-info btn-sm" title="Düzenle">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <a href="@Url.Action("Delete", new { id = product.Id })" class="btn btn-danger btn-sm" title="Sil">
                                                <i class="fas fa-trash"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="8" class="text-center">
                                    <div class="alert alert-info mb-0">
                                        <i class="fas fa-info-circle"></i> Henüz ürün eklenmemiş.
                                        <a href="@Url.Action("Create")" class="alert-link">Hemen ekleyin!</a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- Stok Güncelleme Modal -->
<div class="modal fade" id="stockModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Stok Güncelle</h5>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body">
                <input type="hidden" id="stockProductId" />
                <div class="form-group">
                    <label>Yeni Stok Miktarı:</label>
                    <input type="number" class="form-control" id="stockQuantity" min="0" />
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">İptal</button>
                <button type="button" class="btn btn-primary" id="saveStock">Kaydet</button>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    <script>
        $(document).ready(function () {
            // DataTable
            $('#productTable').DataTable({
                "paging": true,
                "lengthChange": true,
                "searching": true,
                "ordering": true,
                "info": true,
                "autoWidth": false,
                "responsive": true,
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.10.24/i18n/Turkish.json"
                }
            });

            // Toggle Status
            $('.toggle-status').on('click', function () {
                var btn = $(this);
                var productId = btn.data('id');

                $.ajax({
                    url: '@Url.Action("ToggleStatus")',
                    type: 'POST',
                    data: { id: productId },
                    success: function (response) {
                        if (response.success) {
                            if (response.isActive) {
                                btn.removeClass('btn-secondary').addClass('btn-success');
                                btn.html('<i class="fas fa-check"></i>');
                            } else {
                                btn.removeClass('btn-success').addClass('btn-secondary');
                                btn.html('<i class="fas fa-times"></i>');
                            }
                            toastr.success('Durum güncellendi.');
                        } else {
                            toastr.error(response.message);
                        }
                    }
                });
            });

            // Toggle Featured
            $('.toggle-featured').on('click', function () {
                var btn = $(this);
                var productId = btn.data('id');

                $.ajax({
                    url: '@Url.Action("ToggleFeatured")',
                    type: 'POST',
                    data: { id: productId },
                    success: function (response) {
                        if (response.success) {
                            if (response.isFeatured) {
                                btn.removeClass('btn-outline-secondary').addClass('btn-warning');
                                btn.attr('title', 'Öne Çıkan');
                            } else {
                                btn.removeClass('btn-warning').addClass('btn-outline-secondary');
                                btn.attr('title', 'Normal');
                            }
                            toastr.success('Öne çıkan durumu güncellendi.');
                        } else {
                            toastr.error(response.message);
                        }
                    }
                });
            });

            // Update Stock Modal
            $('.update-stock').on('click', function (e) {
                e.preventDefault();
                var productId = $(this).data('id');
                var currentStock = $(this).data('current');

                $('#stockProductId').val(productId);
                $('#stockQuantity').val(currentStock);
                $('#stockModal').modal('show');
            });

            // Save Stock
            $('#saveStock').on('click', function () {
                var productId = $('#stockProductId').val();
                var quantity = $('#stockQuantity').val();

                $.ajax({
                    url: '@Url.Action("UpdateStock")',
                    type: 'POST',
                    data: { id: productId, quantity: quantity },
                    success: function (response) {
                        if (response.success) {
                            toastr.success(response.message);
                            $('#stockModal').modal('hide');
                            location.reload();
                        } else {
                            toastr.error(response.message);
                        }
                    }
                });
            });
        });
    </script>
}