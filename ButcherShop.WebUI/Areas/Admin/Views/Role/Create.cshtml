@model ButcherShop.WebUI.Areas.Admin.Models.CreateRoleViewModel
@{
    ViewBag.Title = "Yeni Rol Ekle";
}

@section Breadcrumb {
    <li class="breadcrumb-item"><a href="@Url.Action("Index", "Dashboard")">Dashboard</a></li>
    <li class="breadcrumb-item"><a href="@Url.Action("Index")">Roller</a></li>
    <li class="breadcrumb-item active">Yeni Rol</li>
}

<div class="row">
    <div class="col-md-6 offset-md-3">
        <div class="card card-primary">
            <div class="card-header">
                <h3 class="card-title">Rol Bilgileri</h3>
            </div>

            @using (Html.BeginForm("Create", "Role", FormMethod.Post, new { @class = "form-horizontal" }))
            {
                @Html.AntiForgeryToken()

                <div class="card-body">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    <div class="form-group">
                        @Html.LabelFor(model => model.Name, "Rol Adı *")
                        @Html.TextBoxFor(model => model.Name, new { @class = "form-control", placeholder = "Örn: Manager, Moderator", required = "required" })
                        @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                        <small class="form-text text-muted">
                            Rol adı benzersiz olmalıdır. Sistem rolleri (Admin, Editor, Customer) otomatik oluşturulur.
                        </small>
                    </div>
                </div>

                <div class="card-footer">
                    <button type="submit" class="btn btn-success">
                        <i class="fas fa-save"></i> Kaydet
                    </button>
                    <a href="@Url.Action("Index")" class="btn btn-secondary">
                        <i class="fas fa-times"></i> İptal
                    </a>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}


