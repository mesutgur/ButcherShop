@model ButcherShop.WebUI.Areas.Admin.Models.EditRoleViewModel
@{
    ViewBag.Title = "Rol Düzenle";
}

@section Breadcrumb {
    <li class="breadcrumb-item"><a href="@Url.Action("Index", "Dashboard")">Dashboard</a></li>
    <li class="breadcrumb-item"><a href="@Url.Action("Index")">Roller</a></li>
    <li class="breadcrumb-item active">Düzenle</li>
}

<div class="row">
    <div class="col-md-8 offset-md-2">
        <div class="card card-warning">
            <div class="card-header">
                <h3 class="card-title">Rol Düzenle: @Model.Name</h3>
            </div>

            @using (Html.BeginForm("Edit", "Role", FormMethod.Post, new { @class = "form-horizontal" }))
            {
                @Html.AntiForgeryToken()
                @Html.HiddenFor(model => model.Id)

                <div class="card-body">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    <div class="form-group">
                        @Html.LabelFor(model => model.Name, "Rol Adı *")
                        @Html.TextBoxFor(model => model.Name, new { @class = "form-control", required = "required" })
                        @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        <label>Bu Role Sahip Kullanıcılar</label>
                        @if (Model.Users != null && Model.Users.Any())
                        {
                            <div class="list-group">
                                @foreach (var user in Model.Users)
                                {
                                    <div class="list-group-item">
                                        <i class="fas fa-user mr-2"></i> @user
                                    </div>
                                }
                            </div>
                        }
                        else
                        {
                            <div class="alert alert-info">
                                <i class="fas fa-info-circle"></i> Bu role sahip kullanıcı bulunmamaktadır.
                            </div>
                        }
                        <small class="form-text text-muted">
                            Kullanıcıların rollerini değiştirmek için <a href="@Url.Action("Index", "User")">Kullanıcı Yönetimi</a> sayfasını kullanın.
                        </small>
                    </div>
                </div>

                <div class="card-footer">
                    <button type="submit" class="btn btn-warning">
                        <i class="fas fa-save"></i> Güncelle
                    </button>
                    <a href="@Url.Action("Index")" class="btn btn-secondary">
                        <i class="fas fa-times"></i> İptal
                    </a>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}


