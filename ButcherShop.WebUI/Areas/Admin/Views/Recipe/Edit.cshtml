@model ButcherShop.Entity.Entities.Recipe
@{
    ViewBag.Title = "Tarif Düzenle";
}

@section Breadcrumb {
    <li class="breadcrumb-item"><a href="@Url.Action("Index", "Dashboard")">Dashboard</a></li>
    <li class="breadcrumb-item"><a href="@Url.Action("Index")">Tarifler</a></li>
    <li class="breadcrumb-item active">Düzenle</li>
}

<div class="row">
    <div class="col-md-12">
        <div class="card card-warning">
            <div class="card-header">
                <h3 class="card-title">Tarif Düzenle: @Model.Title</h3>
            </div>

            @using (Html.BeginForm("Edit", "Recipe", FormMethod.Post, new { @class = "form-horizontal" }))
            {
                @Html.AntiForgeryToken()
                @Html.HiddenFor(model => model.Id)
                @Html.HiddenFor(model => model.CreatedDate)
                @Html.HiddenFor(model => model.IsDeleted)
                @Html.HiddenFor(model => model.AuthorId)
                @Html.HiddenFor(model => model.ViewCount)

                <div class="card-body">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    <div class="row">
                        <div class="col-md-8">
                            <div class="form-group">
                                @Html.LabelFor(model => model.Title, "Tarif Başlığı *")
                                @Html.TextBoxFor(model => model.Title, new { @class = "form-control", required = "required" })
                                @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="col-md-4">
                            <div class="form-group">
                                @Html.LabelFor(model => model.ImageUrl, "Görsel URL")
                                @Html.TextBoxFor(model => model.ImageUrl, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.ImageUrl, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>

                    @if (!string.IsNullOrEmpty(Model.ImageUrl))
                    {
                        <div class="form-group">
                            <img src="@Model.ImageUrl" alt="@Model.Title" class="img-thumbnail" style="max-width: 200px;" />
                        </div>
                    }

                    <div class="form-group">
                        @Html.LabelFor(model => model.Description, "Kısa Açıklama")
                        @Html.TextAreaFor(model => model.Description, new { @class = "form-control", rows = 2 })
                        @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                    </div>

                    <div class="row">
                        <div class="col-md-3">
                            <div class="form-group">
                                @Html.LabelFor(model => model.PreparationTime, "Hazırlık Süresi (dk)")
                                @Html.TextBoxFor(model => model.PreparationTime, new { @class = "form-control", type = "number", min = "0" })
                                @Html.ValidationMessageFor(model => model.PreparationTime, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="col-md-3">
                            <div class="form-group">
                                @Html.LabelFor(model => model.CookingTime, "Pişirme Süresi (dk)")
                                @Html.TextBoxFor(model => model.CookingTime, new { @class = "form-control", type = "number", min = "0" })
                                @Html.ValidationMessageFor(model => model.CookingTime, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="col-md-3">
                            <div class="form-group">
                                @Html.LabelFor(model => model.ServingSize, "Kaç Kişilik")
                                @Html.TextBoxFor(model => model.ServingSize, new { @class = "form-control", type = "number", min = "1" })
                                @Html.ValidationMessageFor(model => model.ServingSize, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="col-md-3">
                            <div class="form-group">
                                @Html.LabelFor(model => model.DifficultyLevel, "Zorluk Seviyesi")
                                @Html.DropDownListFor(model => model.DifficultyLevel,
                                    new SelectList(new[] { "Kolay", "Orta", "Zor" }, Model.DifficultyLevel),
                                    "-- Seçiniz --",
                                    new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.DifficultyLevel, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>

                    <hr />

                    <div class="form-group">
                        <label>Malzemeler ve Miktarlar</label>
                        <div id="productList">
                            @if (Model.RecipeProducts != null && Model.RecipeProducts.Any())
                            {
                                var index = 0;
                                foreach (var rp in Model.RecipeProducts)
                                {
                                    <div class="row product-row mb-2">
                                        <div class="col-md-8">
                                            <select name="selectedProducts" class="form-control">
                                                <option value="">-- Ürün Seçin --</option>
                                                @foreach (var product in ((MultiSelectList)ViewBag.Products).Items.Cast<System.Web.Mvc.SelectListItem>())
                                                {
                                                    <option value="@product.Value" @(product.Value == rp.ProductId.ToString() ? "selected" : "")>@product.Text</option>
                                                }
                                            </select>
                                        </div>
                                        <div class="col-md-3">
                                            <input type="text" name="quantities" class="form-control" value="@rp.Quantity" placeholder="Miktar (örn: 500 gr)" />
                                        </div>
                                        <div class="col-md-1">
                                            <button type="button" class="btn btn-danger btn-sm remove-product" style="@(index == 0 ? "display:none;" : "")">
                                                <i class="fas fa-times"></i>
                                            </button>
                                        </div>
                                    </div>
                                    index++;
                                }
                            }
                            else
                            {
                                <div class="row product-row mb-2">
                                    <div class="col-md-8">
                                        <select name="selectedProducts" class="form-control">
                                            <option value="">-- Ürün Seçin --</option>
                                            @foreach (var product in ((MultiSelectList)ViewBag.Products).Items.Cast<System.Web.Mvc.SelectListItem>())
                                            {
                                                <option value="@product.Value">@product.Text</option>
                                            }
                                        </select>
                                    </div>
                                    <div class="col-md-3">
                                        <input type="text" name="quantities" class="form-control" placeholder="Miktar (örn: 500 gr)" />
                                    </div>
                                    <div class="col-md-1">
                                        <button type="button" class="btn btn-danger btn-sm remove-product" style="display:none;">
                                            <i class="fas fa-times"></i>
                                        </button>
                                    </div>
                                </div>
                            }
                        </div>
                        <button type="button" class="btn btn-sm btn-success" id="addProduct">
                            <i class="fas fa-plus"></i> Ürün Ekle
                        </button>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Ingredients, "Diğer Malzemeler")
                        @Html.TextAreaFor(model => model.Ingredients, new { @class = "form-control", rows = 5 })
                        @Html.ValidationMessageFor(model => model.Ingredients, "", new { @class = "text-danger" })
                        <small class="form-text text-muted">Kasaptan alınmayan diğer malzemeler</small>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Instructions, "Yapılışı *")
                        @Html.TextAreaFor(model => model.Instructions, new { @class = "form-control", rows = 8, required = "required" })
                        @Html.ValidationMessageFor(model => model.Instructions, "", new { @class = "text-danger" })
                    </div>

                    <div class="custom-control custom-switch">
                        @Html.CheckBoxFor(model => model.IsActive, new { @class = "custom-control-input", id = "isActiveSwitch" })
                        <label class="custom-control-label" for="isActiveSwitch">
                            <strong>Aktif</strong>
                        </label>
                    </div>
                </div>

                <div class="card-footer">
                    <button type="submit" class="btn btn-warning">
                        <i class="fas fa-save"></i> Güncelle
                    </button>
                    <a href="@Url.Action("Index")" class="btn btn-secondary">
                        <i class="fas fa-times"></i> İptal
                    </a>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script>
        $(document).ready(function () {
            // Ürün ekleme
            $('#addProduct').on('click', function () {
                var newRow = $('.product-row:first').clone();
                newRow.find('select').val('');
                newRow.find('input').val('');
                newRow.find('.remove-product').show();
                $('#productList').append(newRow);
            });

            // Ürün silme
            $(document).on('click', '.remove-product', function () {
                if ($('.product-row').length > 1) {
                    $(this).closest('.product-row').remove();
                }
            });
        });
    </script>
}