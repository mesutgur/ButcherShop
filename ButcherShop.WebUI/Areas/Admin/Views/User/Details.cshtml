@model ButcherShop.WebUI.Areas.Admin.Models.UserViewModel
@{
    ViewBag.Title = "Kullanıcı Detay";
}

@section Breadcrumb {
    <li class="breadcrumb-item"><a href="@Url.Action("Index", "Dashboard")">Dashboard</a></li>
    <li class="breadcrumb-item"><a href="@Url.Action("Index")">Kullanıcılar</a></li>
    <li class="breadcrumb-item active">Detay</li>
}

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">@Model.FirstName @Model.LastName</h3>
                <div class="card-tools">
                    <a href="@Url.Action("Edit", new { id = Model.Id })" class="btn btn-warning btn-sm">
                        <i class="fas fa-edit"></i> Düzenle
                    </a>
                </div>
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-4">Ad:</dt>
                    <dd class="col-sm-8">@Model.FirstName</dd>

                    <dt class="col-sm-4">Soyad:</dt>
                    <dd class="col-sm-8">@Model.LastName</dd>

                    <dt class="col-sm-4">E-posta:</dt>
                    <dd class="col-sm-8">
                        <a href="mailto:@Model.Email">@Model.Email</a>
                    </dd>

                    <dt class="col-sm-4">Kullanıcı Adı:</dt>
                    <dd class="col-sm-8">@Model.UserName</dd>

                    <dt class="col-sm-4">Telefon:</dt>
                    <dd class="col-sm-8">
                        @if (!string.IsNullOrEmpty(Model.PhoneNumber))
                        {
                            <a href="tel:@Model.PhoneNumber">@Model.PhoneNumber</a>
                        }
                        else
                        {
                            <span class="text-muted">Belirtilmemiş</span>
                        }
                    </dd>

                    <dt class="col-sm-4">Şehir:</dt>
                    <dd class="col-sm-8">@(string.IsNullOrEmpty(Model.City) ? "Belirtilmemiş" : Model.City)</dd>

                    <dt class="col-sm-4">Posta Kodu:</dt>
                    <dd class="col-sm-8">@(string.IsNullOrEmpty(Model.PostalCode) ? "Belirtilmemiş" : Model.PostalCode)</dd>

                    <dt class="col-sm-4">Adres:</dt>
                    <dd class="col-sm-8">
                        @if (!string.IsNullOrEmpty(Model.Address))
                        {
                            @Model.Address
                        }
                        else
                        {
                            <span class="text-muted">Belirtilmemiş</span>
                        }
                    </dd>

                    <dt class="col-sm-4">Roller:</dt>
                    <dd class="col-sm-8">
                        @if (Model.Roles != null && Model.Roles.Any())
                        {
                            foreach (var role in Model.Roles)
                            {
                                <span class="badge badge-info mr-1">@role</span>
                            }
                        }
                        else
                        {
                            <span class="badge badge-secondary">Rol Yok</span>
                        }
                    </dd>

                    <dt class="col-sm-4">Durum:</dt>
                    <dd class="col-sm-8">
                        @if (Model.IsActive)
                        {
                            <span class="badge badge-success">Aktif</span>
                        }
                        else
                        {
                            <span class="badge badge-secondary">Pasif</span>
                        }
                    </dd>

                    <dt class="col-sm-4">Kayıt Tarihi:</dt>
                    <dd class="col-sm-8">@Model.CreatedDate.ToString("dd.MM.yyyy HH:mm")</dd>
                </dl>
            </div>
            <div class="card-footer">
                <a href="@Url.Action("Index")" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Listeye Dön
                </a>
                <a href="@Url.Action("ChangePassword", new { id = Model.Id })" class="btn btn-info">
                    <i class="fas fa-key"></i> Şifre Değiştir
                </a>
                <a href="@Url.Action("Delete", new { id = Model.Id })" class="btn btn-danger float-right">
                    <i class="fas fa-trash"></i> Sil
                </a>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Hızlı İşlemler</h3>
            </div>
            <div class="card-body">
                <a href="@Url.Action("Edit", new { id = Model.Id })" class="btn btn-warning btn-block">
                    <i class="fas fa-edit"></i> Düzenle
                </a>
                <a href="@Url.Action("ChangePassword", new { id = Model.Id })" class="btn btn-info btn-block">
                    <i class="fas fa-key"></i> Şifre Değiştir
                </a>
                <a href="@Url.Action("Delete", new { id = Model.Id })" class="btn btn-danger btn-block">
                    <i class="fas fa-trash"></i> Sil
                </a>
                <a href="@Url.Action("Index")" class="btn btn-secondary btn-block">
                    <i class="fas fa-list"></i> Listeye Dön
                </a>
            </div>
        </div>
    </div>
</div>
