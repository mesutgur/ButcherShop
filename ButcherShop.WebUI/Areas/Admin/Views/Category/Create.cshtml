@model ButcherShop.Entity.Entities.Category
@{
    ViewBag.Title = "Yeni Kategori Ekle";
}

@section Breadcrumb {
    <li class="breadcrumb-item"><a href="@Url.Action("Index", "Dashboard")">Dashboard</a></li>
    <li class="breadcrumb-item"><a href="@Url.Action("Index")">Kategoriler</a></li>
    <li class="breadcrumb-item active">Yeni Kategori</li>
}

<div class="row">
    <div class="col-md-8 offset-md-2">
        <div class="card card-primary">
            <div class="card-header">
                <h3 class="card-title">Kategori Bilgileri</h3>
            </div>

            @using (Html.BeginForm("Create", "Category", FormMethod.Post, new { @class = "form-horizontal", enctype = "multipart/form-data" }))
            {
                @Html.AntiForgeryToken()

                <div class="card-body">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    <div class="form-group row">
                        @Html.LabelFor(model => model.Name, new { @class = "col-sm-3 col-form-label" })
                        <div class="col-sm-9">
                            @Html.TextBoxFor(model => model.Name, new { @class = "form-control", placeholder = "Kategori adını giriniz", required = "required" })
                            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group row">
                        @Html.LabelFor(model => model.Description, "Açıklama", new { @class = "col-sm-3 col-form-label" })
                        <div class="col-sm-9">
                            @Html.TextAreaFor(model => model.Description, new { @class = "form-control", rows = 4, placeholder = "Kategori açıklaması (opsiyonel)" })
                            @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group row">
                        @Html.LabelFor(model => model.ImageUrl, "Görsel URL", new { @class = "col-sm-3 col-form-label" })
                        <div class="col-sm-9">
                            @Html.TextBoxFor(model => model.ImageUrl, new { @class = "form-control", placeholder = "https://example.com/image.jpg" })
                            @Html.ValidationMessageFor(model => model.ImageUrl, "", new { @class = "text-danger" })
                            <small class="form-text text-muted">
                                Görsel URL'si veya dosya yükleme özelliği eklenebilir.
                            </small>
                        </div>
                    </div>

                    <div class="form-group row">
                        @Html.LabelFor(model => model.DisplayOrder, "Sıralama", new { @class = "col-sm-3 col-form-label" })
                        <div class="col-sm-9">
                            @Html.TextBoxFor(model => model.DisplayOrder, new { @class = "form-control", type = "number", min = "1", value = "1" })
                            @Html.ValidationMessageFor(model => model.DisplayOrder, "", new { @class = "text-danger" })
                            <small class="form-text text-muted">
                                Kategorilerin sıralanma düzeni (küçükten büyüğe).
                            </small>
                        </div>
                    </div>

                    <div class="form-group row">
                        <div class="col-sm-3"></div>
                        <div class="col-sm-9">
                            <div class="custom-control custom-switch">
                                @Html.CheckBoxFor(model => model.IsActive, new { @class = "custom-control-input", id = "isActiveSwitch", @checked = "checked" })
                                <label class="custom-control-label" for="isActiveSwitch">Aktif</label>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="card-footer">
                    <button type="submit" class="btn btn-success">
                        <i class="fas fa-save"></i> Kaydet
                    </button>
                    <a href="@Url.Action("Index")" class="btn btn-secondary">
                        <i class="fas fa-times"></i> İptal
                    </a>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}