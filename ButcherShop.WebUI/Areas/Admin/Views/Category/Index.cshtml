@model List<ButcherShop.Entity.Entities.Category>
@{
    ViewBag.Title = "Kategori Yönetimi";
}

@section Breadcrumb {
    <li class="breadcrumb-item"><a href="@Url.Action("Index", "Dashboard")">Dashboard</a></li>
    <li class="breadcrumb-item active">Kategoriler</li>
}

<!--
    * DataTables: Arama, sıralama, sayfalama
    * AJAX Toggle: Aktif/Pasif durumu anında değişir
    * Responsive: Mobil uyumlu
    * Toastr: Bildirim mesajları
-->
<!-- Başarı/Hata Mesajları -->
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show">
        <button type="button" class="close" data-dismiss="alert">&times;</button>
        <i class="fas fa-check-circle"></i> @TempData["SuccessMessage"]
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show">
        <button type="button" class="close" data-dismiss="alert">&times;</button>
        <i class="fas fa-exclamation-circle"></i> @TempData["ErrorMessage"]
    </div>
}

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Kategori Listesi</h3>
                <div class="card-tools">
                    <a href="@Url.Action("Create")" class="btn btn-success btn-sm">
                        <i class="fas fa-plus"></i> Yeni Kategori Ekle
                    </a>
                </div>
            </div>
            <div class="card-body">
                <table class="table table-bordered table-hover" id="categoryTable">
                    <thead>
                        <tr>
                            <th style="width: 50px;">Sıra</th>
                            <th style="width: 100px;">Görsel</th>
                            <th>Kategori Adı</th>
                            <th>Açıklama</th>
                            <th style="width: 100px;">Durum</th>
                            <th style="width: 150px;">İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            foreach (var category in Model)
                            {
                                <tr>
                                    <td class="text-center">@category.DisplayOrder</td>
                                    <td class="text-center">
                                        @if (!string.IsNullOrEmpty(category.ImageUrl))
                                        {
                                            <img src="@category.ImageUrl" alt="@category.Name" class="img-thumbnail" style="max-width: 80px; max-height: 60px;" />
                                        }
                                        else
                                        {
                                            <span class="badge badge-secondary">Görsel Yok</span>
                                        }
                                    </td>
                                    <td>
                                        <strong>@category.Name</strong><br />
                                        <small class="text-muted">ID: @category.Id</small>
                                    </td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(category.Description))
                                        {
                                            if (category.Description.Length > 100)
                                            {
                                                @category.Description.Substring(0, 100)<text>...</text>
                                            }
                                            else
                                            {
                                                @category.Description
                                            }
                                        }
                                        else
                                        {
                                            <span class="text-muted">Açıklama yok</span>
                                        }
                                    </td>
                                    <td class="text-center">
                                        <button type="button" class="btn btn-sm toggle-status @(category.IsActive ? "btn-success" : "btn-secondary")"
                                                data-id="@category.Id"
                                                data-status="@category.IsActive.ToString().ToLower()">
                                            @if (category.IsActive)
                                            {
                                                <i class="fas fa-check"></i> <text>Aktif</text>
                                            }
                                            else
                                            {
                                                <i class="fas fa-times"></i> <text>Pasif</text>
                                            }
                                        </button>
                                    </td>
                                    <td class="text-center">
                                        <div class="btn-group">
                                            <a href="@Url.Action("Edit", new { id = category.Id })" class="btn btn-info btn-sm" title="Düzenle">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <a href="@Url.Action("Delete", new { id = category.Id })" class="btn btn-danger btn-sm" title="Sil">
                                                <i class="fas fa-trash"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="6" class="text-center">
                                    <div class="alert alert-info mb-0">
                                        <i class="fas fa-info-circle"></i> Henüz kategori eklenmemiş.
                                        <a href="@Url.Action("Create")" class="alert-link">Hemen ekleyin!</a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    <script>
        $(document).ready(function () {
            // DataTable
            $('#categoryTable').DataTable({
                "paging": true,
                "lengthChange": true,
                "searching": true,
                "ordering": true,
                "info": true,
                "autoWidth": false,
                "responsive": true,
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.10.24/i18n/Turkish.json"
                }
            });

            // Toggle Status AJAX
            $('.toggle-status').on('click', function () {
                var btn = $(this);
                var categoryId = btn.data('id');
                var currentStatus = btn.data('status');

                $.ajax({
                    url: '@Url.Action("ToggleStatus")',
                    type: 'POST',
                    data: { id: categoryId },
                    success: function (response) {
                        if (response.success) {
                            if (response.isActive) {
                                btn.removeClass('btn-secondary').addClass('btn-success');
                                btn.html('<i class="fas fa-check"></i> Aktif');
                                btn.data('status', 'true');
                            } else {
                                btn.removeClass('btn-success').addClass('btn-secondary');
                                btn.html('<i class="fas fa-times"></i> Pasif');
                                btn.data('status', 'false');
                            }
                            toastr.success('Durum güncellendi.');
                        } else {
                            toastr.error(response.message);
                        }
                    },
                    error: function () {
                        toastr.error('Bir hata oluştu.');
                    }
                });
            });
        });
    </script>
}